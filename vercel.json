{

  "framework": null,

  "buildCommand": "npm --prefix frontend ci && npm --prefix frontend run build",

  "outputDirectory": "frontend/dist",

  "functions": {
    "api/**/*.py": {
      "runtime": "python3.12"
    }
  },

  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.py" },
    { "source": "/:path*", "destination": "/index.html" }
  ]
}
